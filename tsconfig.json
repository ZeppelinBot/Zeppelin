{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",
    "lib": [
      "es6",
      "es7",
      "ES2017"
    ],
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
