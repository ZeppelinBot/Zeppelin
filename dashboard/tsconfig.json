{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "strict": true,
    "lib": [
      "es2017",
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "files": [
    "ts-vue-shim.d.ts"
  ]
}
